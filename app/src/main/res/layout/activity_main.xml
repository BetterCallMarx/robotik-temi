<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnGotoHomeBase"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btnHeight"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="16dp"
        android:drawableStart="@drawable/baseline_home_24"
        android:drawablePadding="@dimen/btnIconPadding"
        android:text="@string/btnGotoHomeBase"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnExitApp"
        android:layout_width="84dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:drawableEnd="@drawable/baseline_exit_to_app_24"
        android:drawablePadding="@dimen/btnIconPadding"
        android:text="@string/btnExit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Tour"
        android:layout_width="166dp"
        android:layout_height="94dp"
        android:layout_marginTop="476dp"
        android:layout_marginEnd="536dp"
        android:drawablePadding="@dimen/btnIconPadding"
        android:text="Starte eine Tour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="603dp"
        android:layout_height="190dp"
        android:fontFamily="monospace"
        android:text="Willkommen Im Computermusem!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Tour"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>