<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Titel der Seite -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wählen Sie die Art der Führung"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="24dp" />

    <!-- Kurz oder Lang Auswahl -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dauer der Führung"
        android:textSize="25sp"
        android:paddingBottom="12dp" />

    <RadioGroup
        android:id="@+id/radioGroupDauer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <RadioButton
            android:id="@+id/rbKurz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kurz"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/rbLang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lang"
            android:textSize="20dp"
            android:layout_marginStart="24dp" />

        <RadioButton
            android:id="@+id/rbIndividuell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Individuell"
            android:textSize="20dp"
            android:layout_marginStart="24dp" />
    </RadioGroup>

    <!-- Einfach oder Ausführlich Auswahl -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Umfang der Erklärung"
        android:textSize="25dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp" />

    <RadioGroup
        android:id="@+id/radioGroupUmfang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp">

        <RadioButton
            android:id="@+id/rbEinfach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Einfach"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/rbAusführlich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ausführlich"
            android:textSize="20dp"
            android:layout_marginStart="24dp" />
    </RadioGroup>

    <!-- Bestätigungsbutton -->
    <Button
        android:id="@+id/btnConfirmSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bestätigen"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:padding="12dp" />

    <!-- TextViews für die aktuellen Auswahlen, alles in einer Zeile -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tvDauerAuswahl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:text="Dauer der Führung: Nicht ausgewählt"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvUmfangAuswahl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="16dp"
            android:text="Umfang der Erklärung: Nicht ausgewählt"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSelectedPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="24dp"/>
</LinearLayout>
